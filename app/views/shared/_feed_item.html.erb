<!-- Listing 10.40: A partial for a single feed item. -->
<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <!-- Listing 10.44: The feed item partial with added delete link. -->
  <% if current_user?(feed_item.user) %>
    <!-- Exercise 10: Using partials, eliminate the duplication in the delete links from Listing 10.43 and Listing 10.44. -->
    <%= render 'shared/micropost_delete_link', object: feed_item %>
  <% end %>
</li>
